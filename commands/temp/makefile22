all: tempLib mainFile

tempLib:
	mkdir temp

mainFile: main.o patient.o patientQueue.o
	gcc -o mainFile.exe temp/main.o temp/patient.o temp/patientQueue.o

main.o: main.c lib/include/patient/patient.h lib/include/patient/patientQueue.h
	gcc -o temp/main.o main.c -c -W -Wall -ansi -pedantic

patient.o: lib/src/patient/patient.c lib/include/patient/patient.h 
	gcc -o temp/patient.o lib/src/patient/patient.c -c -W -Wall -ansi -pedantic

patientQueue.o: lib/src/patient/patientQueue.c lib/include/patient/patient.h lib/include/patient/patientQueue.h
	gcc -o temp/patientQueue.o lib/src/patient/patientQueue.c -c -W -Wall -ansi -pedantic

lib: lib_bin patient_lib.o patientQueue.o

lib_bin:
	mkdir lib/bin

patient_lib.o: lib/scr/patient/patient.c lib/include/patient/patient.h
	gcc -o lib/bin/patient.o lib/scr/patient/patient.c lib/include/patient/patient.h -c -W -Wall -ansi -pedantic

patientQueue_lib.o: lib/scr/patiente/patientQueue.c lib/include/patient/patient.h lib/include/patient/patientQueue.h
	gcc -o lib/bin/patientQueue.o lib/scr/patient/patientQueue.c -c -W -Wall -ansi -pedantic

w_clean:
	rmdir /S /Q temp

w_lib_clean:
	del /Q lib/bin/*

l_clean:
	rm -rf *temp

l_lib_clean:
	rm -rf *lib/bin/

.PHONY: all lib w_clean w_lib_clean l_clean l_lib_clean